extends layout

block content
	.container
		.panel.panel-default

			.panel-heading
				h3.panel-title Add Post
			.panel-body
				.row
					.col-md-12
						form(method='post', action='/posts/add', enctype="multipart/form-data")
							input(name='author_name', type='hidden', value='#{user.name}')
							input(name='author_username', type='hidden', value='#{user.username}')
							.form-group
								label Title
								input.form-control(name='title',type='text', placeholder='Title')
							.form-group
								label Body
								textarea.form-control(name = 'body',id='body' placeholder='Content')
							button.btn.btn-default(type='submit', value = 'Upload') Submit
							script(src='//cdn.ckeditor.com/4.7.1/full/ckeditor.js')
							script
								| CKEDITOR.replace('body');

